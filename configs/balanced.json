{
  "fund_name": "Balanced Fund",
  "fund_type": "balanced",
  "purpose": "Moderate risk, steady returns via diversified allocation across equities and fixed income (and optional cash). Minimize volatility subject to a moderate return target and asset-class bands.",
  "as_of_policy": "2025-12-31",
  "data_contract": {
    "holdings_required_columns": ["ticker", "weight", "sector", "market_cap_usd", "dividend_yield", "asset_class"],
    "holdings_optional_columns": ["restricted", "do_not_trade"],
    "weight_column": "weight",
    "ticker_column": "ticker",
    "sector_column": "sector",
    "market_cap_column": "market_cap_usd",
    "dividend_yield_column": "dividend_yield",
    "asset_class_column": "asset_class"
  },
  "instrument_policy": {
    "long_only": true,
    "allow_leverage": false,
    "allowed_asset_classes": ["Equity", "ETF", "Bond", "Cash", "REIT"],
    "prohibited_instruments": ["Futures", "Cryptocurrency", "LeveragedETF"],
    "restricted_tickers": []
  },
  "optimization": {
    "mode": "min_vol_subject_to_return",
    "return_target": {
      "horizon": "annual",
      "target_return": 0.12,
      "is_hard_constraint": true,
      "fallback_if_infeasible": {
        "strategy": "maximize_return_then_min_vol",
        "log_reason": true
      }
    },
    "turnover_control": {
      "use_turnover_penalty": true,
      "turnover_penalty_l1": 0.18,
      "max_one_way_turnover": 0.20,
      "min_trade_threshold_weight": 0.0025
    }
  },
  "constraints": {
    "fully_invested": true,
    "max_single_security_weight": 0.08,
    "min_single_security_weight": 0.0,
    "sector_caps": {
      "enabled": true,
      "max_sector_weight": 0.30
    },
    "asset_class_bands": {
      "enabled": true,
      "bands": {
        "Equity": { "min": 0.50, "max": 0.70 },
        "Bond": { "min": 0.25, "max": 0.45 },
        "Cash": { "min": 0.00, "max": 0.10 },
        "REIT": { "min": 0.00, "max": 0.15 }
      }
    },
    "market_cap_constraints": {
      "enabled": false
    },
    "income_constraints": {
      "enabled": false
    },
    "do_not_trade_rules": {
      "enabled": true,
      "column": "do_not_trade"
    }
  },
  "risk_model": {
    "lookback_trading_days": 504,
    "returns_type": "log",
    "covariance_estimator": "sample_shrinkage",
    "shrinkage_alpha": 0.18,
    "ensure_psd": true,
    "risk_free_rate_annual": 0.02
  },
  "reporting": {
    "require_compliance_report": true,
    "require_trade_list": true,
    "require_risk_contribution": true,
    "require_explainability_notes": true,
    "require_asset_class_exposure_report": true
  }
}
